<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background_music">

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton"
        android:src="@drawable/ethereal_pic"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageButton2"
        android:scaleType="centerCrop"
        android:background="#000100"
        android:onClick="playEthereal"/>

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/kinetic_pic"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:background="#000000"
        android:onClick="playKinetic"/>

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/concussive_pic"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:background="#000000"
        android:onClick="playConcussive"/>
</RelativeLayout>
